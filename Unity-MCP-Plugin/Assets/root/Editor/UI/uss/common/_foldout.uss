/* ==========================================================================
   Foldout Styles - Animated expandable sections
   ========================================================================== */

/* Common Foldout Base - shared by base-foldout, title-foldout and item-foldout */
.base-foldout,
.title-foldout,
.item-foldout {
    margin-left: -4px;
    padding-left: 0px;
}

/* Foldout Content Animation - shared expanded state */
.base-foldout .unity-foldout__content,
.title-foldout .unity-foldout__content,
.item-foldout .unity-foldout__content {
    display: flex !important;
    overflow: hidden;
    transition-property: max-height, opacity, margin-top, margin-bottom, padding-top, padding-bottom;
    transition-duration: 250ms;
    transition-timing-function: ease-in-out;
    opacity: 1;
    max-height: 1000px;
}

/* Collapsed State - shared */
.base-foldout.collapsed .unity-foldout__content,
.title-foldout.collapsed .unity-foldout__content,
.item-foldout.collapsed .unity-foldout__content {
    max-height: 0;
    opacity: 0;
    margin-top: 0 !important;
    margin-bottom: 0 !important;
    padding-top: 0 !important;
    padding-bottom: 0 !important;
    transition-property: max-height, opacity, margin-top, margin-bottom, padding-top, padding-bottom;
    transition-duration: 150ms;
    transition-timing-function: ease-in-out;
}

/* Item Foldout specific - bold text */
.item-foldout .unity-foldout__text {
    font-size: 13px;
    -unity-font-style: bold;
}

/* Title Foldout specific - larger font for section headers */
.title-foldout .unity-foldout__text {
    font-size: 13px;
    -unity-font-style: bold;
}
