/* General Styles */
.root-container {
    background-color: #383838;
    padding: 15px;
    color: #E0E0E0;
}

.header-title {
    font-size: 24px;
    -unity-font-style: bold;
    margin-bottom: 5px;
}

.header-description {
    font-size: 14px;
    color: #B0B0B0;
    margin-bottom: 15px;
    white-space: normal;
}

/* Filter Section */
.filter-container {
    flex-direction: row;
    align-items: center;
    margin-bottom: 15px;
}

.filter-label {
    margin-right: 5px;
}

.filter-textfield {
    flex-grow: 1;
    margin-right: 15px;
}

.type-dropdown {
    width: 100px;
    margin-right: 15px;
}

.filter-stats-label {
    color: #B0B0B0;
}

/* Tool List */
.tool-list-scrollview {
    flex-grow: 1;
}

/* Tool Item */
.tool-item-container {
    background-color: #4A4A4A;
    border-radius: 8px;
    padding: 12px;
    margin-bottom: 10px;
}

.tool-item-header {
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-start;
}

.tool-item-title-container {
    flex-grow: 1;
    margin-right: 10px;
}

.tool-title {
    font-size: 16px;
    -unity-font-style: bold;
    white-space: normal;
}

.tool-id {
    font-size: 12px;
    color: #B0B0B0;
}

/* Details Foldout */
.details-foldout {
    margin-top: 10px;
}

.details-text {
    white-space: normal;
    font-size: 13px;
    margin-left: 15px; /* Indent content */
}

/* Argument Item */
.argument-item {
    margin-left: 15px;
    margin-bottom: 8px;
}

.argument-name {
    -unity-font-style: bold;
}

.argument-description {
    white-space: normal;
    color: #B0B0B0;
}

/* Tool Item Highlighting */
.tool-item-container.enabled {
    background-color: rgba(46, 139, 87, 0.3); /* SeaGreen with transparency */
}

.tool-item-container.disabled {
    background-color: rgba(139, 0, 0, 0.3); /* DarkRed with transparency */
}

/* Toggle Switch Styles - minimal and compatible with older USS parsers */
.unity-toggle .unity-toggle__input {
    width: 40px;
    height: 20px;
    border-radius: 10px;
    background-color: #707070;
    -unity-background-image-tint-color: white;
}

.unity-toggle .unity-toggle__checkmark {
    width: 16px;
    height: 16px;
    border-radius: 8px;
    background-color: white;
    /* Use margin to shift the checkmark instead of transform for compatibility */
    margin-left: 2px;
}

/* Use the 'checked' class (Unity adds this) to change visual state.
   Keep changes simple to avoid StylePropertyReader index errors. */
.unity-toggle.checked .unity-toggle__input {
    background-color: #2E8B57; /* SeaGreen */
}
.unity-toggle.checked .unity-toggle__checkmark {
    margin-left: 22px;
}
