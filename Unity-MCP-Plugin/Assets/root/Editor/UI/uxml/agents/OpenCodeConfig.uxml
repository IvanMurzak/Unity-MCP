<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:VisualElement class="frame-group" style="flex-grow: 1;">
        <ui:VisualElement style="flex-direction: row; align-items: center;">
            <ui:VisualElement name="agentIcon" class="agent-icon" />
            <ui:VisualElement style="flex-grow: 1;">
                <ui:Label text="Open Code" class="section-title" />
                <ui:VisualElement style="flex-direction: row; align-items: center;">
                    <ui:Label name="downloadLink" text="Download" class="section-desc link-label" />
                    <ui:Label name="tutorialSeparator" text="â€¢" class="section-desc link-separator" />
                    <ui:Label name="tutorialLink" text="YouTube Tutorial" class="section-desc link-label" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>

        <ui:Label text="Configure MCP for Open Code CLI." class="section-desc" style="margin-top: 4px;" />

        <ui:VisualElement class="row" style="margin-top: 0px;">
            <ui:VisualElement name="configureStatusCircle" class="status-indicator-circle status-indicator-circle-disconnected" />
            <ui:Label text="Not configured" name="configureStatusText" style="flex-grow: 1;" />
            <ui:Button name="btnConfigure" text="Configure" class="btn-primary" />
        </ui:VisualElement>

        <ui:Foldout text="Manual Configuration Steps - Option 1" value="false" class="title-foldout" style="margin-top: 8px;">
            <ui:Label text="1. Open a terminal and run the following command to be in the folder of the Unity project" class="section-desc" />
            <ui:TextField name="terminalGoToFolder" multiline="true" readonly="true" selectOnFocus="true" class="config-snippet" style="margin-bottom: 8px;" />
            <ui:Label text="2. Run the following command in the folder of the Unity project to configure Open Code" class="section-desc" />
            <ui:TextField name="terminalConfigureOpenCode" multiline="true" readonly="true" selectOnFocus="true" class="config-snippet" style="margin-bottom: 8px;" />
            <ui:Label text="3. Start Open Code" class="section-desc" />
            <ui:TextField value="opencode" multiline="true" readonly="true" selectOnFocus="true" class="config-snippet" style="margin-bottom: 8px;" />
        </ui:Foldout>

        <ui:Foldout text="Manual Configuration Steps - Option 2" value="false" class="title-foldout">
            <ui:Label text="1. Open or create file '%User%/.opencode/config.toml'" class="section-desc" />
            <ui:Label text="2. Copy and paste the configuration TOML into the file." class="section-desc" />
            <ui:TextField name="tomlConfig" multiline="true" readonly="true" selectOnFocus="true" class="config-snippet" style="margin-bottom: 8px;" />
        </ui:Foldout>

        <ui:Foldout text="Troubleshooting" value="false" class="title-foldout">
            <ui:Label text="- Ensure Open Code CLI is installed and accessible from terminal" class="section-desc" />
        </ui:Foldout>
    </ui:VisualElement>
</ui:UXML>
