<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:VisualElement class="frame-group" style="flex-grow: 1;">
        <ui:VisualElement style="flex-direction: row; align-items: center;">
            <ui:VisualElement name="agentIcon" class="agent-icon" />
            <ui:VisualElement style="flex-grow: 1;">
                <ui:Label text="Claude Code" class="section-title" />
                <ui:Label name="downloadLink" text="Download" class="section-desc link-label" />
            </ui:VisualElement>
        </ui:VisualElement>
        <!-- <ui:Label text="Claude Code is a CLI tool by Anthropic for AI-assisted development." class="section-desc" /> -->

        <ui:VisualElement class="row" style="margin-top: 0px;">
            <ui:VisualElement name="configureStatusCircle" class="status-indicator-circle status-indicator-circle-disconnected" />
            <ui:Label text="Not configured" name="configureStatusText" style="flex-grow: 1;" />
            <ui:Button name="btnConfigure" text="Configure" class="btn-primary" />
        </ui:VisualElement>

        <ui:Foldout text="Manual Configuration Steps" value="false" class="title-foldout" style="margin-top: 8px;">
            <ui:Label text="1. Open a terminal and run the following command to be in the folder of the Unity project" class="section-desc" />
            <ui:TextField name="terminalGoToFolder" multiline="true" readonly="true" selectOnFocus="true" class="config-snippet" style="margin-bottom: 8px;" />
            <ui:Label text="2. Run the following command in the folder of the Unity project to configure Claude Code" class="section-desc" />
            <ui:TextField name="terminalConfigureClaudeCode" multiline="true" readonly="true" selectOnFocus="true" class="config-snippet" style="margin-bottom: 8px;" />
            <ui:Label text="3. Start Claude Code" class="section-desc" />
            <ui:TextField value="claude" multiline="true" readonly="true" selectOnFocus="true" class="config-snippet" style="margin-bottom: 8px;" />
        </ui:Foldout>

        <ui:Foldout text="Troubleshooting" value="false" class="title-foldout">
            <ui:Label text="- Ensure Claude Code CLI is installed and accessible from terminal" class="section-desc" />
            <ui:Label text="- Ensure Claude Code CLI is started in the same folder where Unity project is located. This folder must contains Assets folder inside" class="section-desc" />
            <ui:Label text="- Ensure Claude Code is configured with the same port as it is in Unity right now" class="section-desc" />
            <ui:Label text="- Check that the configuration file .claude.json exists" class="section-desc" />
            <ui:Label text="- Restart Claude Code after configuration changes" class="section-desc" />
        </ui:Foldout>
    </ui:VisualElement>
</ui:UXML>
