<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xsi="http://www.w3.org/2001/XMLSchema-instance" engine="UnityEngine.UIElements" editor="UnityEditor.UIElements" noNamespaceSchemaLocation="../../../../../../UIElementsSchema/UIElements.xsd" editor-extension-mode="False">
    <ui:VisualElement class="frame-group" style="flex-grow: 1;">
        <!-- Agent Header -->
        <ui:VisualElement style="flex-direction: row; align-items: center;">
            <ui:VisualElement name="agentIcon" class="agent-icon" />
            <ui:VisualElement style="flex-grow: 1;">
                <ui:Label text="Claude Code" class="section-title" />
                <ui:VisualElement style="flex-direction: row; align-items: center;">
                    <ui:Label name="downloadLink" text="Download" class="section-desc link-label" />
                    <ui:Label name="tutorialSeparator" text="â€¢" class="section-desc link-separator" />
                    <ui:Label name="tutorialLink" text="YouTube Tutorial" class="section-desc link-label" />
                </ui:VisualElement>
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- Under header container -->
        <ui:VisualElement name="containerUnderHeader" />

        <!-- Transport mode toggle -->
        <ui:Label text="Manual configuration" class="section-title" />
        <ui:VisualElement style="flex-direction: row; margin-top: 4px;">
            <ui:Toggle name="toggleOptionHttp" label="Streamable HTTP" class="toggle-text-button" />
            <ui:Toggle name="toggleOptionStdio" label="STDIO" class="toggle-text-button" />
        </ui:VisualElement>

        <!-- Transport mode container: HTTP -->
        <ui:VisualElement name="containerHttp" />

        <!-- Transport mode container: STDIO -->
        <ui:VisualElement name="containerStdio" />

        <!-- Template elements -->
        <ui:VisualElement class="row" style="display: none;">
            <!-- Template Label -->
            <ui:Label name="templateLabelDescription" class="section-desc" style="margin-top: 4px;" />
            <ui:Label name="templateWarningLabel" class="section-desc alert-label" />
            <ui:Label name="templateAlertLabel" class="section-desc alert-label" />

            <!-- Template TextField -->
            <ui:TextField name="templateTextFieldReadOnly" multiline="true" readonly="true" selectOnFocus="true" value="..." class="config-snippet" />

            <!-- Template Foldout -->
            <ui:Foldout name="templateFoldoutFirst" value="false" class="title-foldout" style="margin-top: 8px;" />
            <ui:Foldout name="templateFoldout" value="false" class="title-foldout" />

            <!-- Configuration Status -->
            <ui:VisualElement name="templateConfigurationStatus" class="row" style="margin-top: 0px;">
                <ui:VisualElement name="configureStatusCircle" class="status-indicator-circle status-indicator-circle-disconnected" />
                <ui:Label text="Not configured" name="configureStatusText" style="flex-grow: 1;" />
                <ui:Button name="btnConfigure" text="Configure" class="btn-primary" />
            </ui:VisualElement>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
