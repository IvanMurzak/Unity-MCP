<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="False">
    <ui:VisualElement class="item-container">
        <ui:VisualElement class="item-header tool-item-header">
            <ui:VisualElement class="tool-item-row tool-item-title-row">
                <ui:Label name="item-title" text="Tool title, could be multiple lines long" class="item-title" />
                <ui:Toggle name="item-toggle" class="item-switch" />
            </ui:VisualElement>
            <ui:VisualElement class="tool-item-row tool-item-subtitle-row">
                <ui:Label name="item-id" text="tool-id-single-line" class="item-id" />
                <ui:Label name="item-token-count" text="~0 tokens" class="item-token-count" tooltip="Total tokens consumed by active tools in the AI context. Fewer tokens means more free context for AI to reason, leading to better and more accurate responses. Disable unused tools to reduce token usage." />
            </ui:VisualElement>
        </ui:VisualElement>
        <ui:VisualElement name="item-details">
            <ui:Foldout name="description-foldout" text="Description" class="item-foldout" style="margin-top: 10px;" value="false">
                <ui:Label name="description-text" text="Tool description abc abc abc..." class="details-text" />
                <ui:VisualElement style="margin-bottom: 7px;" />
            </ui:Foldout>
            <ui:Foldout name="arguments-foldout" text="Input arguments (2)" class="item-foldout" value="false">
                <ui:VisualElement name="arguments-container" />
                <ui:VisualElement style="margin-bottom: 7px;" />
            </ui:Foldout>
            <ui:Foldout name="outputs-foldout" text="Outputs" class="item-foldout" value="false">
                <ui:VisualElement name="outputs-container" />
            </ui:Foldout>
        </ui:VisualElement>
    </ui:VisualElement>
</ui:UXML>
